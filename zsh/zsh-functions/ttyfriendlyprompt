
PCOLOR=$(echo $PCOLOR |  grep -o '[[:digit:]]*' | cut -c 4)

case $(tty) in /dev/tty[0-9]*)
     prompt='%b%B%F{$PCOLOR}%2~% %F{sgr0}$(gitprompt) %B%F{$PCOLOR}> %b%F{sgr0}'
     RPROMPT='| %T'
   ;;
  *)
     prompt='%B%F{$PCOLOR}ï•™  %b%B%F{$PCOLOR}%2~% %F{sgr0}$(gitprompt)  '
     RPROMPT='| %T'
   ;;
esac
